{
    "compilerOptions": {
        "outDir": "build",
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "noImplicitAny": true,
        "noImplicitThis": false,
        "types": ["webpack-env"],
        "paths": {
            "@/*": ["src/*"],
            "@@core/*": ["core/*"],
            "@bigScreen/*": ["src/entry/bigScreen/*"],
            "@admin/*": ["src/entry/admin/*"],
            "@h5/*": ["src/entry/h5/*"],
            "@library/*": ["src/entry/library/*"],
            "@zlb-h5/*": ["src/entry/zlb-h5/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": ["packages", "typings", "@types/*.d.ts", "types/*.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx", "core/**/*.ts"],
    "exclude": ["build/**/*", "node_modules", "**/dist", "**/__tests__/**/*", "**/test/**", "**/tests/**"]
}
